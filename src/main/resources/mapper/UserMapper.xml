<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="learn.quickweb.mvc.mapper.UserMapper">

    <resultMap type="learn.quickweb.mvc.domain.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               username,
               password,
               salt,
               create_time,
               update_time,
               deleted
        from user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAll" resultMap="UserMap">
        select
        id, username, password, salt, create_time, update_time, deleted from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="salt != null and salt != ''">
                and salt = #{salt}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
        <if test="orderByMe != null and orderByMe != '' and orderByMeSort != null and orderByMeSort != ''">
            order by
            <choose>
                <when test="orderByMe == 'id' and orderByMeSort == 'ASC'">
                    id
                </when>
                <when test="orderByMe == 'username' and orderByMeSort == 'ASC'">
                    username
                </when>
                <when test="orderByMe == 'password' and orderByMeSort == 'ASC'">
                    password
                </when>
                <when test="orderByMe == 'salt' and orderByMeSort == 'ASC'">
                    salt
                </when>
                <when test="orderByMe == 'createTime' and orderByMeSort == 'ASC'">
                    create_time
                </when>
                <when test="orderByMe == 'updateTime' and orderByMeSort == 'ASC'">
                    update_time
                </when>
                <when test="orderByMe == 'deleted' and orderByMeSort == 'ASC'">
                    deleted
                </when>
                <when test="orderByMe == 'id' and orderByMeSort == 'DESC'">
                    id desc
                </when>
                <when test="orderByMe == 'username' and orderByMeSort == 'DESC'">
                    username desc
                </when>
                <when test="orderByMe == 'password' and orderByMeSort == 'DESC'">
                    password desc
                </when>
                <when test="orderByMe == 'salt' and orderByMeSort == 'DESC'">
                    salt desc
                </when>
                <when test="orderByMe == 'createTime' and orderByMeSort == 'DESC'">
                    create_time desc
                </when>
                <when test="orderByMe == 'updateTime' and orderByMeSort == 'DESC'">
                    update_time desc
                </when>
                <when test="orderByMe == 'deleted' and orderByMeSort == 'DESC'">
                    deleted desc
                </when>
                <otherwise>
                    1
                </otherwise>
            </choose>
        </if>
    </select>

    <!--模糊查询指定行数据-->
    <select id="queryAllLike" resultMap="UserMap">
        select
        id, username, password, salt, create_time, update_time, deleted from user
        <where>
            <if test="id != null">
                and id like concat('%',#{id},'%')
            </if>
            <if test="username != null and username != ''">
                and username like concat('%',#{username},'%')
            </if>
            <if test="password != null and password != ''">
                and password like concat('%',#{password},'%')
            </if>
            <if test="salt != null and salt != ''">
                and salt like concat('%',#{salt},'%')
            </if>
            <if test="createTime != null">
                and create_time like concat('%',#{createTime},'%')
            </if>
            <if test="updateTime != null">
                and update_time like concat('%',#{updateTime},'%')
            </if>
            <if test="deleted != null">
                and deleted like concat('%',#{deleted},'%')
            </if>
        </where>
        <if test="orderByMe != null and orderByMe != '' and orderByMeSort != null and orderByMeSort != ''">
            order by
            <choose>
                <when test="orderByMe == 'id' and orderByMeSort == 'ASC'">
                    id
                </when>
                <when test="orderByMe == 'username' and orderByMeSort == 'ASC'">
                    username
                </when>
                <when test="orderByMe == 'password' and orderByMeSort == 'ASC'">
                    password
                </when>
                <when test="orderByMe == 'salt' and orderByMeSort == 'ASC'">
                    salt
                </when>
                <when test="orderByMe == 'createTime' and orderByMeSort == 'ASC'">
                    create_time
                </when>
                <when test="orderByMe == 'updateTime' and orderByMeSort == 'ASC'">
                    update_time
                </when>
                <when test="orderByMe == 'deleted' and orderByMeSort == 'ASC'">
                    deleted
                </when>
                <when test="orderByMe == 'id' and orderByMeSort == 'DESC'">
                    id desc
                </when>
                <when test="orderByMe == 'username' and orderByMeSort == 'DESC'">
                    username desc
                </when>
                <when test="orderByMe == 'password' and orderByMeSort == 'DESC'">
                    password desc
                </when>
                <when test="orderByMe == 'salt' and orderByMeSort == 'DESC'">
                    salt desc
                </when>
                <when test="orderByMe == 'createTime' and orderByMeSort == 'DESC'">
                    create_time desc
                </when>
                <when test="orderByMe == 'updateTime' and orderByMeSort == 'DESC'">
                    update_time desc
                </when>
                <when test="orderByMe == 'deleted' and orderByMeSort == 'DESC'">
                    deleted desc
                </when>
                <otherwise>
                    1
                </otherwise>
            </choose>
        </if>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="salt != null and salt != ''">
                and salt = #{salt}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(username, password, salt, create_time, update_time, deleted)
        values (#{username}, #{password}, #{salt}, #{createTime}, #{updateTime}, #{deleted})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user
        (username, password, salt, create_time, update_time, deleted)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.salt}, #{entity.createTime}, #{entity.updateTime},
            #{entity.deleted})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into user
        (username, password, salt, create_time, update_time, deleted)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.password}, #{entity.salt}, #{entity.createTime}, #{entity.updateTime},
            #{entity.deleted})
        </foreach>
        on duplicate key update
        username = values(username
        ),
        password = values(password
        ),
        salt = values(salt
        ),
        create_time = values(create_time
        ),
        update_time = values(update_time
        ),
        deleted = values(deleted
        )
    </insert>

    <insert id="register" keyProperty="id" useGeneratedKeys="true">
        insert into user(username, password, salt)
        values (#{username}, #{password}, #{salt})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="salt != null and salt != ''">
                salt = #{salt},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user
        where id = #{id}
    </delete>

</mapper>

